	<div class="my_account_section">
		<section class="my_account_section_update">
			<div class="form_wrapper">
				<form action="/users/<%=user.id%>" method="POST">
					<input type="hidden" name="_method" value="put">
					<input type="text" name="fname" placeholder=<%=user.fname%> value=<%=user.fname%>> 
					<input type="text" name="lname" placeholder=<%=user.lname%> value=<%=user.lname%>> 
					<input type="text" name="email" placeholder=<%=user.email%> value=<%=user.email%>> 
					<input type="text" name="password" placeholder="*******" disabled>
					<input name="authenticity_token" value="<%= form_authenticity_token() %>" type="hidden">
					<button type="submit">Save</button>  
				</form>
			</div>
		</section>
